<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@drawable/main_background"
    tools:context="com.example.android.soccerscorecounter.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/text_white"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">


        <TextView
            android:id="@+id/ScoreSummary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/ScoreSummary_start"
            android:textSize="112sp"
            android:background="@drawable/soccerscorecounter_bg"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_light"
            android:textColor="@color/text_white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="0dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TeamA_label"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="Team A"
                    android:textColor="@color/text_white"
                    android:textSize="12dp"

                    tools:ignore="NestedWeights" />

                <TextView
                    android:id="@+id/TeamA"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="16sp"
                    android:textColor="@color/text_white"
                    android:text="@string/TeamAName" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TeamB_label"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/text_white"
                    android:text="Team B"
                    android:textSize="12dp"
                    tools:ignore="NestedWeights" />

                <TextView
                    android:id="@+id/TeamB"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_bold"
                    android:textAlignment="viewEnd"

                    android:textSize="16sp"
                    android:textColor="@color/text_white"
                    android:text="@string/TeamBName" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/layout_bg"
        android:layout_weight="7"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:ignore="NestedWeights"
            android:padding="8dp">

            <Button
                android:id="@+id/goalTeamA"
                android:onClick="goalA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/goal_button"
                android:text="+ goal"
                android:textColor="@color/text_white"
                android:textAllCaps="false"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/teamARedCardCounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/dark_red"
                    android:layout_gravity="center"
                    android:textSize="23sp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp" />

                <Button
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="red card"
                    android:onClick="redCardA"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/text_white"
                    android:background="@drawable/red_card_button"
                    android:textAllCaps="false"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/teamAYellowCardCounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/dark_yellow"
                    android:layout_gravity="center"
                    android:textSize="23sp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp" />

                <Button
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="yellow card"
                    android:onClick="yellowCardA"
                    android:background="@drawable/yellow_card_button"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/text_white"
                    android:textAllCaps="false"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                tools:ignore="NestedWeights"
                android:padding="8dp">

                <Button
                    android:id="@+id/goalTeamB"
                    android:onClick="goalB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/goal_button"
                    android:text="+ goal"
                    android:textColor="@color/text_white"
                    android:textAllCaps="false"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:layout_marginTop="8dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:text="red card"
                        android:onClick="redCardB"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/text_white"
                        android:background="@drawable/red_card_button"
                        android:textAllCaps="false"/>

                    <TextView
                        android:id="@+id/teamBRedCardCounter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/dark_red"
                        android:layout_gravity="center"
                        android:textSize="23sp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp" />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">



                    <Button
                        android:layout_marginTop="8dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:onClick="yellowCardB"
                        android:text="yellow card"
                        android:background="@drawable/yellow_card_button"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/text_white"
                        android:textAllCaps="false"/>

                    <TextView
                        android:id="@+id/teamBYellowCardCounter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/dark_yellow"
                        android:layout_gravity="center"
                        android:textSize="23sp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        </LinearLayout>

        <Button
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="reset game"
            android:textColor="@color/darker_gray"
            android:textAllCaps="false"
            android:layout_margin="12dp"
            android:background="@drawable/reset_button"
            android:fontFamily="@font/roboto_light"/>
    </RelativeLayout>


</LinearLayout>
